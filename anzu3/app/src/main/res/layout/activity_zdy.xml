<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ZDYActivity">

    <ImageView
        android:id="@+id/bjtt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/djtj"/>
    <ImageView
        android:id="@+id/paly"
        android:layout_marginBottom="90dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yx_aj"
        android:alpha="0.6"/>
    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pt_ht"
        android:layout_centerVertical="true"
        android:alpha="0.3"
        />
    <ImageView
        android:id="@+id/don"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pt_ht2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:alpha="0.3"
        />
    <TextView
        android:id="@+id/xuanXiang"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#F5B20C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="选项"/>
    <TextView
        android:id="@+id/bctp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#F5B20C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="保存"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/mosi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#E0E0E0"
        android:text="简单模式"/>
    <LinearLayout
        android:id="@+id/tankauang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相机"
            android:background="#FFFCFC"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />
        <Button
            android:id="@+id/imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相册"
            android:background="#FFFCFC"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#DFDFDF"
            />
        <Button
            android:id="@+id/quxiao"
            android:background="#FFFCFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>