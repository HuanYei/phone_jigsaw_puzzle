<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bjt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pkq2" />
        />
    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pt_ht"
        android:layout_centerVertical="true"
        android:alpha="0.3"
        />
    <ImageView
        android:id="@+id/don"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pt_ht2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:alpha="0.3"
        />
    <ImageView
        android:id="@+id/paly"
        android:layout_marginBottom="90dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yx_aj"
        android:alpha="0.6"/>
    <TextView
        android:id="@+id/ppyx"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="匹配游戏"/>

    <LinearLayout
        android:background="@drawable/ppmbj"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/ppm">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="请输入匹配码"
            android:layout_width="wrap_content"
            android:textSize="35dp"
            android:layout_height="50dp" />
        <EditText
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="5"
            android:layout_gravity="center"
            android:id="@+id/ppmsr"
            android:layout_width="200dp"
            android:textSize="25dp"
            android:layout_height="50dp" />
        <RelativeLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ppmqd"

                android:background="@color/pt"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:text="确定"/>
            <Button
                android:layout_marginRight="20dp"
                android:id="@+id/ppmqx"
                android:background="@color/pt"
                android:textColor="@color/text"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="取消"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
<RelativeLayout
    android:id="@+id/toubu2"
    android:layout_width="match_parent"
    android:background="@drawable/tx"
    android:layout_height="75dp">
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/mosi"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="简单模式"/>
    <RelativeLayout

        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"

        android:layout_height="50dp">
        <TextView
            android:background="@drawable/jb"
            android:layout_width="22dp"
            android:layout_toLeftOf="@+id/usermoney"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_height="22dp" />
        <TextView
            android:background="#424270"
            android:layout_marginRight="18dp"
            android:id="@+id/usermoney"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="33dp"
            android:gravity="center"
            android:text="0000"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_height="16dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="160dp"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/user_tx"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user_tx"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:text="未登录"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:id="@+id/username"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lv"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.00"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:id="@+id/phbview"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F8F8F8"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center"
            android:text="当前模式排行榜"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#2976B1"
        android:id="@+id/dibu"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/phb_tb"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/phb_tb"/>
        <TextView
            android:id="@+id/phb"
            android:layout_marginLeft="52dp"
            android:textColor="#F5B20C"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="排行榜"/>
        <TextView
            android:id="@+id/sucai_tb"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/phb"
            android:layout_centerVertical="true"
            android:background="@drawable/sucai_tb"/>
        <TextView
            android:id="@+id/sucai"
            android:layout_toRightOf="@id/sucai_tb"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="20dp"
            android:textColor="#F5B20C"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="素材"/>
        <TextView
            android:id="@+id/sangchen_tb"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/sucai"
            android:layout_centerVertical="true"
            android:background="@drawable/sangchen"/>
        <TextView
            android:id="@+id/sangchen"
            android:layout_toRightOf="@id/sangchen_tb"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="20dp"
            android:textColor="#F5B20C"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="商城"/>
        <TextView
            android:id="@+id/sz_tb"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/qkphb"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/sz_tb3"/>
        <TextView
            android:id="@+id/qkphb"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#F5B20C"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="选项"/>
    </RelativeLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_gravity="start"
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="#1A737E"
        android:layout_height="match_parent">
       <fragment
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:layout_marginLeft="16dp"
           android:name="com.HY.frament.TX_xx"/>
       <LinearLayout
           android:background="#1B7885"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:background="@drawable/sz_tb3"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="修改个人信息"
               android:textSize="30dp"/>
       </LinearLayout>
        <LinearLayout
            android:background="#1B7885"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/sz_tb3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="#1B7885"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/sz_tb3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的私密照片"
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="#1B7885"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/sz_tb3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的云素材"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>